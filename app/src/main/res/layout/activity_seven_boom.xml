<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SevenBoomActivity">

    <TextView
        android:id="@+id/sevenBoomHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7 BOOM Game"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/numberUp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/numberUp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#2196F3"
        android:text="+"
        android:textColor="@android:color/white"
        android:textSize="36sp"
        android:textStyle="bold"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sevenBoomHeader" />

</androidx.constraintlayout.widget.ConstraintLayout>
